<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Orientation base operations -->
    <style name="OperationGroupOrientation">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="OperationButton" parent="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="OutputLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_gravity">end</item>

        <item name="android:gravity">end|bottom</item>
        <item name="android:singleLine">true</item>

        <item name="android:textIsSelectable">true</item>
    </style>
</resources>
